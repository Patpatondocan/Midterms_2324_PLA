<Window x:Class="Midterms_2324_PLA.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Midterms_2324_PLA"
        mc:Ignorable="d"
        Title="AdminWindow" Height="578" Width="800">
    <Grid>
        <ListView x:Name="Lv_ProductData" Margin="61,51,61,220">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header ="Product ID" DisplayMemberBinding="{Binding Pid}" Width="100"/>
                    <GridViewColumn Header ="Product Name" DisplayMemberBinding="{Binding Pname}" Width="100"/>
                    <GridViewColumn Header ="Product Description" DisplayMemberBinding="{Binding Pdescrip}" Width="150"/>
                    <GridViewColumn Header ="Product Stock" DisplayMemberBinding="{Binding Pstock}" Width="100"/>
                    <GridViewColumn Header ="Cost" DisplayMemberBinding="{Binding Pcost}" Width="100"/>
                    <GridViewColumn Header ="Selling Price" DisplayMemberBinding="{Binding Psellingprice}" Width="118"/>


                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
